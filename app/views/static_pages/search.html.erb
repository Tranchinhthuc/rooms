<div class="container">
  <h2>Search Result</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Appointments</th>
        <th>apppointment</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |apppointment| %>
        <tr>
          <td><%= apppointment.name %></td>
          <td><%= apppointment.employee.try(:name) %></td>
          <td><%= apppointment.start_time.try(:strftime, '%Y/%m/%d-%l:%M') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>